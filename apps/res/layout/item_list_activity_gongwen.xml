<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/root"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#b8b8b8"
android:orientation="vertical">
	<RelativeLayout
	android:visibility="gone"
	android:id="@+id/root_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#FFFFFF"
	android:padding="10dp">
		<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:text="标题"
		android:textColor="#0b71de"
		android:textSize="15sp"/>
		<TextView
		android:id="@+id/childtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/title"
		android:layout_marginStart="10dp"
		android:layout_marginTop="5dp"
		android:text="副标题"
		android:textColor="#b8b8b8"
		android:textSize="13sp"/>
		<ImageView
		android:id="@+id/jiantou"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="10dp"
		android:clickable="true"
		android:src="@drawable/right"
		android:contentDescription="TODO"
		android:focusable="true"/>
	</RelativeLayout>
	<LinearLayout
	android:id="@+id/sub_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#dcebff"
	android:padding="10dp"
	android:orientation="horizontal"
	android:visibility="visible">
		<RelativeLayout
		android:id="@+id/valuelayout"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content">
			<TextView
			android:id="@+id/gwshr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:text="gwshr"
			android:textColor="#5c5c5c"
			android:textSize="12sp"/>
			<TextView
			android:id="@+id/gwbt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:text="gwbt"
			android:textColor="#5c5c5c"
			android:textSize="12sp"
			android:layout_below="@+id/gwshr"/>
			<TextView
			android:id="@+id/gwfj"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:text="gwfj"
			android:textColor="#5c5c5c"
			android:textSize="12sp"
			android:layout_below="@+id/gwbt"/>
		</RelativeLayout>
		<LinearLayout
		android:orientation="vertical"
		android:id="@+id/functionlayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
			<Button
			android:id="@+id/function_0"
			android:layout_width="70dp"
			android:layout_height="25dp"
			android:layout_alignParentEnd="true"
			android:background="@drawable/banli2"
			android:layout_marginBottom="7dp"
			android:text="查看"
			android:textColor="#FFF"/>
			<Button
			android:id="@+id/function_1"
			android:layout_width="70dp"
			android:layout_height="25dp"
			android:layout_alignParentEnd="true"
			android:background="@drawable/banli2"
			android:layout_marginBottom="7dp"
			android:text="进度"
			android:textColor="#FFF"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
